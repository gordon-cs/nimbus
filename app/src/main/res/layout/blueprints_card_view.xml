<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blueprints_card_frame"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_frame_height"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/blueprints_card_view"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:cardElevation="@dimen/card_elevation"
        app:contentPadding="4dp">

        <Button
            android:id="@+id/blueprintElement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:onClick="displayToastMsg"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hello_blueprints_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|top"
            android:paddingStart="@dimen/blueprints_title_padding"
            android:paddingEnd="@dimen/blueprints_title_padding" />

        <TextView
            android:id="@+id/world_blueprints_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/blueprints_details__start_padding"
            android:paddingTop="@dimen/blueprints_details_top_padding_1"
            android:paddingEnd="@dimen/blueprints_title_padding" />

        <TextView
            android:id="@+id/index_blueprints_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/blueprints_details__start_padding"
            android:paddingTop="@dimen/blueprints_details_top_padding_2"
            android:paddingEnd="@dimen/blueprints_title_padding" />

        <ImageView
            android:id="@+id/blueprints_details_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:contentDescription="@string/card_details_arrow"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </androidx.cardview.widget.CardView>

</FrameLayout>

