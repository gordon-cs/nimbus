<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="16dp"
    tools:context=".ui.main.BlueprintActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="6dp"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/blueprint_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:layoutDirection="ltr"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="BlueprintName"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bp_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bp_id_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blueprint ID: "
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/bp_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bp_updated_heading"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Updated:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bp_updated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bp_updated_by_heading"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Updated By:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bp_updated_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bp_updated_org_id_heading"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Org ID:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bp_org_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bp_updated_project_name_heading"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Project:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bp_project_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bp_updated_status_heading"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Status:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bp_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/deployButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="@dimen/card_elevation"
        android:text="Deploy" />

</LinearLayout>