<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deployment_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="30dp"
    android:paddingEnd="20dp"
    tools:context=".ui.main.DeploymentActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/deployment_card"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:contentPadding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

<!--                <Button-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/powerstate"-->
<!--                    android:id="@+id/pwr">-->
<!--                </Button>-->

                <TextView
                    android:id="@+id/deployment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:layoutDirection="ltr"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="DeploymentName"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/deployment_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:text="DeploymentDescription"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deployment_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:text="PowerStatus"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deployment_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:text="DeploymentCreatedAt"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deployment_created_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:text="DeploymentCreatedBy"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deployment_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:text="DeploymentID"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deployment_updated_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:text="DeploymentUpdatedAt"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deployment_updated_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:text="DeploymentUpdatedBy"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/deployment_project_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:paddingBottom="30dp"
                android:text="ProjectID"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/actions_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Actions"
        android:visibility="visible" />

</LinearLayout>