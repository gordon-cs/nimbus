<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deployment_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    tools:context=".ui.main.DeploymentActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/deployment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="6dp"
        app:contentPadding="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/deployment_card_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/deployment_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|top"
                        android:layoutDirection="ltr"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:text="DeploymentName"
                        android:textAlignment="center"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/deployment_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"
                    android:text="DeploymentDescription"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/deployment_status_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status:"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deployment_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PowerStatus"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/deployment_created_at_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Created At:"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deployment_created_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DeploymentCreatedAt"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/deployment_created_by_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Created By:"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deployment_created_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DeploymentCreatedBy"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/deployment_id_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blueprint ID:"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deployment_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DeploymentID"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/deployment_updated_at_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Updated At:"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deployment_updated_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DeploymentUpdatedAt"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/deployment_updated_by_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Updated By: "
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deployment_updated_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DeploymentUpdatedBy"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/deployment_expires_at_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expires At: "
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deployment_expires_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DeploymentExpiresAt"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/deployment_project_id_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Project ID:"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deployment_project_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="30dp"
                            android:text="ProjectID"
                            android:textSize="12sp" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/resources_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="100"
            app:cardElevation="6dp">
            <!-- android:minHeight="100dp" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resources_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Resources"
                    android:textStyle="bold" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:id="@+id/resources_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                    </TableLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/actions_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="0"
            android:text="Actions"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>