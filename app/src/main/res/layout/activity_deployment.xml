<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deployment_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.DeploymentActivity">

    <TextView
        android:id="@+id/deployment_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:layoutDirection="ltr"
        android:paddingTop="20dp"
        android:text="DeploymentName"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deployment_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="124dp"
        android:layout_marginRight="10dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:text="DeploymentCreatedAt"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/deployment_name"
        app:layout_constraintStart_toEndOf="@+id/deployment_name"
        app:layout_constraintTop_toTopOf="@id/deployment_name" />
</androidx.constraintlayout.widget.ConstraintLayout>